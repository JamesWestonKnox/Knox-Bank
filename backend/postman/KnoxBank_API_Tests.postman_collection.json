{
  "info": {
    "_postman_id": "97299eaa-5a7d-4877-90dd-0daf4f559aae",
    "name": "KnoxBank API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "49882860"
  },
  "item": [
    {
      "name": "Customer Management",
      "item": [
        {
          "name": "Register valid customer",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const timestamp = Date.now().toString().slice(-10);",
                  "pm.collectionVariables.set(\"uniqueAccountNumber\", timestamp);",
                  "const randomDigits = Math.floor(Math.random() * 100).toString().padStart(2, '0');",
                  "pm.collectionVariables.set(\"uniqueIdNumber\", \"98010158000\" + randomDigits);",
                  "const randomNum = Math.floor(Math.random() * 10000);",
                  "pm.collectionVariables.set(\"uniqueFullName\", \"Test User \" + randomNum);",
                  "pm.collectionVariables.set(\"testPassword\", \"SecurePass123!\");"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData;",
                  "try {",
                  "    jsonData = pm.response.json();",
                  "} catch (e) {}",
                  "pm.test(\"Status code is 201 Created\", () => {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "if (jsonData && jsonData.customer) {",
                  "    pm.collectionVariables.set(\"registeredAccountNumber\", jsonData.customer.accountNumber);",
                  "    pm.collectionVariables.set(\"registeredCustomerId\", jsonData.customer.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"{{uniqueFullName}}\",\n  \"idNumber\": \"{{uniqueIdNumber}}\",\n  \"accountNumber\": \"{{uniqueAccountNumber}}\",\n  \"password\": \"{{testPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customer/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Register Duplicate Account",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const registeredAccount = pm.collectionVariables.get(\"registeredAccountNumber\");",
                  "if (!registeredAccount) {",
                  "    console.error(\"registeredAccountNumber not set!\");",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const responseText = pm.response.text();",
                  "pm.test(\"Status code is 400 Bad Request\", () => {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "if (responseText) {",
                  "    try {",
                  "        const jsonData = pm.response.json();",
                  "        pm.test(\"Duplicate error message exists\", () => {",
                  "            const errorMsg = jsonData.error || JSON.stringify(jsonData.errors || \"\");",
                  "            pm.expect(errorMsg).to.include(\"already in use\");",
                  "        });",
                  "    } catch (e) {}",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Duplicate User\",\n  \"idNumber\": \"9801015800099\",\n  \"accountNumber\": \"{{registeredAccountNumber}}\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customer/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customer", "register"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    { "key": "uniqueAccountNumber", "value": "" },
    { "key": "uniqueIdNumber", "value": "" },
    { "key": "uniqueFullName", "value": "" },
    { "key": "testPassword", "value": "" },
    { "key": "registeredAccountNumber", "value": "" },
    { "key": "registeredCustomerId", "value": "" },
    { "key": "baseUrl", "value": "https://localhost:4000" }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "if (pm.environment.get('CI') === 'true') {",
          "    pm.collectionVariables.set('baseUrl', 'http://localhost:4000');",
          "} else {",
          "    pm.collectionVariables.set('baseUrl', 'https://localhost:4000');",
          "}"
        ]
      }
    }
  ]
}
