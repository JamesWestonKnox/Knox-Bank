    {
      "name": "Customer Management",
      "item": [
        {
          "name": "Register valid customer",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate unique account number (10 digits)\r",
                  "const timestamp = Date.now().toString().slice(-10);\r",
                  "pm.collectionVariables.set(\"uniqueAccountNumber\", timestamp);\r",
                  "\r",
                  "// Generate unique ID number (13 digits)\r",
                  "const randomDigits = Math.floor(Math.random() * 100).toString().padStart(2, '0');\r",
                  "pm.collectionVariables.set(\"uniqueIdNumber\", \"98010158000\" + randomDigits);\r",
                  "\r",
                  "// Generate unique full name\r",
                  "const randomNum = Math.floor(Math.random() * 10000);\r",
                  "pm.collectionVariables.set(\"uniqueFullName\", \"Test User \" + randomNum);\r",
                  "\r",
                  "// Set test password\r",
                  "pm.collectionVariables.set(\"testPassword\", \"SecurePass123!\");\r",
                  "\r",
                  "// Log generated test data\r",
                  "console.log(\"Generated test data:\", {\r",
                  "    Name: pm.collectionVariables.get(\"uniqueFullName\"),\r",
                  "    ID: pm.collectionVariables.get(\"uniqueIdNumber\"),\r",
                  "    Account: pm.collectionVariables.get(\"uniqueAccountNumber\")\r",
                  "});\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData;\r",
                  "try {\r",
                  "    jsonData = pm.response.json();\r",
                  "} catch (e) {\r",
                  "    console.warn(\"Response is not JSON or empty, skipping JSON parsing.\");\r",
                  "}\r",
                  "\r",
                  "// Status code test\r",
                  "pm.test(\"Status code is 201 Created\", () => {\r",
                  "    pm.response.to.have.status(201);\r",
                  "});\r",
                  "\r",
                  "// Save registered account safely\r",
                  "if (jsonData && jsonData.customer) {\r",
                  "    pm.collectionVariables.set(\"registeredAccountNumber\", jsonData.customer.accountNumber);\r",
                  "    pm.collectionVariables.set(\"registeredCustomerId\", jsonData.customer.id);\r",
                  "\r",
                  "    console.log(\"✓ Customer registered successfully!\");\r",
                  "    console.log(\"Customer ID:\", jsonData.customer.id);\r",
                  "    console.log(\"Account Number:\", jsonData.customer.accountNumber);\r",
                  "} else {\r",
                  "    console.warn(\"❌ Could not parse customer data. Collection variables may not be set for duplicate test.\");\r",
                  "}\r",
                  "\r",
                  "// Optional: Basic JSON structure test\r",
                  "if (jsonData) {\r",
                  "    pm.test(\"Response has customer data\", () => {\r",
                  "        pm.expect(jsonData).to.have.property('customer');\r",
                  "        pm.expect(jsonData.customer).to.have.property('id');\r",
                  "        pm.expect(jsonData.customer).to.have.property('fullName');\r",
                  "        pm.expect(jsonData.customer).to.have.property('accountNumber');\r",
                  "    });\r",
                  "}\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\r\n  \"fullName\": \"{{uniqueFullName}}\",\r\n  \"idNumber\": \"{{uniqueIdNumber}}\",\r\n  \"accountNumber\": \"{{uniqueAccountNumber}}\",\r\n  \"password\": \"{{testPassword}}\"\r\n}",
              "options": {
                "raw": {
                  "language": "text"
                }
              }
            },
            "url": {
              "raw": "http://localhost:4000/api/customer/register",
              "protocol": "https",
              "host": ["localhost"],
              "port": "4000",
              "path": ["api", "customer", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Register Duplicate Account",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const registeredAccount = pm.collectionVariables.get(\"registeredAccountNumber\");\r",
                  "\r",
                  "if (!registeredAccount) {\r",
                  "    console.error(\"❌ registeredAccountNumber not set! Make sure registration ran first.\");\r",
                  "} else {\r",
                  "    console.log(\"Duplicate test will use account:\", registeredAccount);\r",
                  "}\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const responseText = pm.response.text();\r",
                  "console.log(\"Status Code:\", pm.response.code);\r",
                  "console.log(\"Response Body:\", responseText);\r",
                  "console.log(\"Content-Type:\", pm.response.headers.get(\"Content-Type\"));\r",
                  "\r",
                  "// Test status code\r",
                  "pm.test(\"Status code is 400 Bad Request\", () => {\r",
                  "    pm.response.to.have.status(400);\r",
                  "});\r",
                  "\r",
                  "// Safely parse JSON only if response exists\r",
                  "if (responseText) {\r",
                  "    try {\r",
                  "        const jsonData = pm.response.json();\r",
                  "        pm.test(\"Duplicate error message exists\", () => {\r",
                  "            const errorMsg = jsonData.error || JSON.stringify(jsonData.errors || \"\");\r",
                  "            pm.expect(errorMsg).to.include(\"already in use\");\r",
                  "        });\r",
                  "        console.log(\"✓ Duplicate validation working correctly!\");\r",
                  "    } catch (e) {\r",
                  "        console.warn(\"Response not valid JSON, skipping JSON assertions:\", e.message);\r",
                  "    }\r",
                  "} else {\r",
                  "    console.warn(\"Response body empty — skipping JSON assertions (normal in Runner)\");\r",
                  "}\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
